model User {
  IdUser               String             @id @default(cuid()) @map("id") @db.VarChar(25)
  Name                 String?            @map("name") @db.VarChar(25)
  Email                String             @unique @map("email") @db.VarChar(50)
  EmailVerified        DateTime?          @map("emailVerified") @db.Timestamp(0)
  Password             String             @map("password") @db.VarChar(255)
  Image                String?            @map("image") @db.VarChar(255)
  CreatedAt            DateTime           @default(now()) @map("createdAt") @db.Timestamp(0)
  UpdatedAt            DateTime?          @map("UpdatedAt") @db.Timestamp(0)
  IsDisabled           Boolean?           @default(false) @map("isDisabled")
  LoginRestrictedUntil DateTime?          @map("loginRestrictedUntil") @db.Timestamp(0)
  TwoFactor            Boolean?           @default(false) @map("twoFactor")
  UserInfo             UserInfo?
  UserLoginHistory     UserLoginHistory[]
  UseRoles             UserRole[]
  Sessions             Session[]

  //@@index([Email])  I can define an Index. Pokud hled8m 4asto t5eba by email, tak na něj dám index
}
