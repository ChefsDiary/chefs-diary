model PasswordResetToken {
  idPasswordResetToken Int      @id @default(autoincrement()) @db.Integer
  identifier           String   @db.VarChar(25)
  token                String   @unique @db.VarChar(36)
  expires              DateTime @db.Timestamp(0)

  @@schema("auth")
}

